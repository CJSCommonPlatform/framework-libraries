<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.gov.justice.annotation.test</groupId>
    <artifactId>project-to-test</artifactId>
    <version>1.0.0-SNAPSHOT</version>


    <build>
        <plugins>
            <plugin>
                <groupId>uk.gov.justice.maven</groupId>
                <artifactId>annotation-validator-maven-plugin</artifactId>
                <configuration>
                    <generateReport>true</generateReport>
                    <failBuildOnError>false</failBuildOnError>
                    <validationSkip>false</validationSkip>
                    <annotations>
                        <annotation>uk.gov.justice.plugin.domain.TestAnnotation</annotation>
                    </annotations>

                    <validatorProperties>
                        <validationMessageText>dummy message</validationMessageText>
                    </validatorProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
