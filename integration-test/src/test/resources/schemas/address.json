{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Address",
  "additionalProperties": true,
  "properties": {
    "addressLine1": {
      "type": "string"
    },
    "addressLine2": {
      "type": "string"
    },
    "city": {
      "type": "string"
    }
  },
  "required": [
    "addressLine1",
    "addressLine2",
    "city"
  ],
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "state": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        }
      },
      "required": [
        "state",
        "zipCode"
      ]
    },
    {
      "type": "object",
      "properties": {
        "county": {
          "type": "string"
        },
        "postCode": {
          "type": "string"
        }
      },
      "required": [
        "county",
        "postCode"
      ]
    }
  ]
}
