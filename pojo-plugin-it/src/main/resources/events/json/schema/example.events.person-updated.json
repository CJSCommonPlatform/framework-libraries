{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "person",
  "properties": {
    "title": {
      "type": "string",
      "enum": [
        "",
        "Mr",
        "Mrs",
        "Ms"
      ]
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "required": {
      "type": "boolean"
    },
    "signedInCount": {
      "type": "integer"
    },
    "ratio": {
      "type": "number"
    },
    "alias": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "aliasForenames": {
            "type": "string",
            "maxLength": 20
          },
          "aliasInitials": {
            "type": "string",
            "maxLength": 2
          },
          "aliasSurname": {
            "type": "string",
            "maxLength": 30
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "firstName",
    "lastName",
    "required",
    "signedInCount",
    "ratio",
    "alias"
  ]
}
