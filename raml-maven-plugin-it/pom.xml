<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.gov.justice.maven</groupId>
    <artifactId>raml-maven-plugin-it</artifactId>
    <version>1.2.0-SNAPSHOT</version>

    <!-- TODO add parent after extracting framewrok specific parent pom that does not contain raml-maven-plugin configuration-->
    <!-- remember to manually update version -->

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>raml-maven-plugin</artifactId>
                <groupId>uk.gov.justice.maven</groupId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>external-ramls</id>
                        <configuration>
                            <generatorName>
                                uk.gov.justice.raml.maven.test.RamlTitleAppendingGenerator
                            </generatorName>
                            <basePackageName>uk.gov.justice.api</basePackageName>
                            <outputDirectory>${project.build.directory}/generated-sources
                            </outputDirectory>
                            <sourceDirectory>CLASSPATH</sourceDirectory>
                            <includes>
                                <include>**/*external-*.raml</include>
                            </includes>
                            <excludes>
                                <exclude>**/*external-ignore.raml</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                    <execution>
                        <id>internal-ramls</id>
                        <configuration>
                            <generatorName>
                                uk.gov.justice.raml.maven.test.RamlTitleAppendingGenerator
                            </generatorName>
                            <basePackageName>uk.gov.justice.api</basePackageName>
                            <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                            <outputDirectory>${project.build.directory}/generated-sources
                            </outputDirectory>
                            <includes>
                                <include>**/*internal-*.raml</include>
                            </includes>
                            <excludes>
                                <exclude>**/*internal-ignore.raml</exclude>
                            </excludes>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>uk.gov.justice.maven</groupId>
                        <artifactId>raml-for-testing-io</artifactId>
                        <version>${project.version}</version>
                        <classifier>raml</classifier>
                    </dependency>
                    <dependency>
                        <groupId>uk.gov.justice.maven</groupId>
                        <artifactId>raml-generator-for-testing</artifactId>
                        <type>test-jar</type>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>uk.gov.justice</groupId>
                <artifactId>common-bom</artifactId>
                <version>1.6.10</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.maven</groupId>
            <artifactId>raml-generator-for-testing</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
